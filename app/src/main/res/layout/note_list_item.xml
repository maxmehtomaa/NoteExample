<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/black"
    app:contentPadding="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="4dp">

        <TextView
            android:id="@+id/note_list_item_text_view_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(Title)"
            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/note_list_item_text_view_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(Content text)"
            android:ellipsize="end"
            android:textSize="15sp"
            />

        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_gravity="end"
            app:srcCompat="@drawable/ic_delete"
            android:id="@+id/note_list_item_image_view_remove"/>

        <TextView
            android:id="@+id/note_list_item_text_view_timestamp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(Timestamp)"
            android:layout_gravity="end"/>
        

    </LinearLayout>

</androidx.cardview.widget.CardView>