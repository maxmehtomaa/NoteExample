<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@android:color/black"
    app:contentPadding="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="4dp"
        android:orientation="vertical"
        android:background="@android:color/white"
        android:padding="2dp">

        <TextView
            android:id="@+id/note_list_item_title_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(Title)"
            android:textStyle="bold"
            android:maxLines="1"
            android:textSize="15sp"
            />

        <TextView
            android:id="@+id/note_list_item_content_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(Content text)"
            android:ellipsize="end"
            android:textSize="15sp"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_gravity="end"
            app:srcCompat="@drawable/ic_delete"
            android:id="@+id/note_list_item_remove_image_view"
            android:contentDescription="@string/remove_image" />

        <TextView
            android:id="@+id/note_list_item_date_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:text="(Date)"
            android:layout_gravity="end"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>